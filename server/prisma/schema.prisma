generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int        @id @default(autoincrement())
  nome      String
  email     String     @unique
  senha     String
  role      String     @default("ESTUDANTE")
  avatarUrl String?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  moradias  Moradia[]
  avaliacoes Avaliacao[]
  reservas   Reserva[]
  
  mensagensEnviadas   Mensagem[] @relation("mensagensEnviadas")
  mensagensRecebidas  Mensagem[] @relation("mensagensRecebidas")
}

model Moradia {
  id        Int       @id @default(autoincrement())
  nome      String
  endereco  String
  descricao String
  preco     Float
  imageUrl  String?
  latitude  Float?
  longitude Float? 

  criador   Usuario @relation(fields: [criadorId], references: [id])
  criadorId Int

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  avaliacoes Avaliacao[]
  reservas   Reserva[]
  mensagens  Mensagem[]
}

model Avaliacao {
  id        Int      @id @default(autoincrement())
  nota      Float    
  comentario String?
  
  autor     Usuario  @relation(fields: [autorId], references: [id], onDelete: Cascade)
  autorId   Int
  moradia   Moradia  @relation(fields: [moradiaId], references: [id], onDelete: Cascade)
  moradiaId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([moradiaId, autorId])
}

model Reserva {
  id        Int       @id @default(autoincrement())
  dataEntrada DateTime
  dataSaida   DateTime
  status    String    @default("PENDENTE") 

  moradia   Moradia   @relation(fields: [moradiaId], references: [id], onDelete: Cascade)
  moradiaId Int

  usuario   Usuario   @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  usuarioId Int

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Mensagem {
  id      Int      @id @default(autoincrement())
  texto   String   @db.Text

  // Quem enviou
  remetente      Usuario  @relation("mensagensEnviadas", fields: [remetenteId], references: [id], onDelete: Cascade)
  remetenteId    Int

  // Quem recebeu
  destinatario   Usuario  @relation("mensagensRecebidas", fields: [destinatarioId], references: [id], onDelete: Cascade)
  destinatarioId Int

  // Sobre qual casa
  moradia        Moradia  @relation(fields: [moradiaId], references: [id], onDelete: Cascade)
  moradiaId      Int

  createdAt DateTime @default(now())
}